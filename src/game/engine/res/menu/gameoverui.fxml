<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?scenebuilder-stylesheet menustyle.css?>

<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="game.MainMenuController"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" hgap="10" vgap="10">
          <padding><Insets top="100" right="50" bottom="10" left="25"/></padding>

    <Label
            fx:id="tdlabel"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            alignment="TOP_CENTER"
            text="Game Over!!"
            />
    <VBox GridPane.columnIndex="1"
          GridPane.rowIndex="2"
          spacing="10"
          alignment="CENTER_LEFT">
		  <Label
            fx:id="label"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            alignment="TOP_CENTER"
            text="Game Over!!"
            />
        <Button
            fx:id = "exitButton"
            onAction="#exitGame"
            text = "Exit"
            prefWidth="120"
            prefHeight="35"
            />

    </VBox>
</GridPane>