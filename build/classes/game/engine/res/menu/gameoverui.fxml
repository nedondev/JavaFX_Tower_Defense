<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?scenebuilder-stylesheet menustyle.css?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="game.engine.GameOverController"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" hgap="10" vgap="10">
          <padding><Insets top="100" right="50" bottom="10" left="25"/></padding>

    <Label
            fx:id="tdlabel"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            alignment="TOP_CENTER"
            text="Game Over!!"
            />
    <VBox
        fx:id="vbox" 
        GridPane.columnIndex="1"
        GridPane.rowIndex="2"
        spacing="5"
        alignment="TOP_CENTER">
        <HBox GridPane.columnIndex="1"
            GridPane.rowIndex="0"
            alignment="TOP_CENTER"
            spacing="10">
            <Label
            fx:id="labelName"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            alignment="TOP_CENTER"
            text="Name"
            />
            <Label
            fx:id="labelResources"
            GridPane.columnIndex="2"
            GridPane.rowIndex="1"
            alignment="TOP_CENTER"
            text="Resources"
            />
            <Label
            fx:id="labelLevel"
            GridPane.columnIndex="3"
            GridPane.rowIndex="1"
            alignment="TOP_CENTER"
            text="Level"
            />
            <Label
            fx:id="labelScore"
            GridPane.columnIndex="4"
            GridPane.rowIndex="1"
            alignment="TOP_CENTER"
            text="Score"
            />
        </HBox>
        <Label
            fx:id="label1"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            alignment="TOP_CENTER"
            text=""
            />
        <Label
            fx:id="label2"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            alignment="TOP_CENTER"
            text=""
            />
        <Label
            fx:id="labelsm1"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            alignment="TOP_CENTER"
            text=""
            />
        <Label
            fx:id="labelsm2"
            GridPane.columnIndex="1"
            GridPane.rowIndex="4"
            alignment="TOP_CENTER"
            text=""
            />
        <Label
            fx:id="labelsm3"
            GridPane.columnIndex="1"
            GridPane.rowIndex="5"
            alignment="TOP_CENTER"
            text=""
            />
        <Button
            fx:id = "exitButton"
            onAction="#exitGame"
            text = "Exit"
            prefWidth="160"
            prefHeight="35"
            alignment="TOP_CENTER"
            />
    </VBox>
</GridPane>